@model OrnekProje.Models.ViewModels.AddBookForm_VM

@{
    ViewData["Title"] = "Create";
}

<h1>Kitap Ekle</h1>

@* <h4>AddBook_VM</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Book" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Book.Title"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Price"></label>
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Summary"></label>
                <input asp-for="Book.Summary" class="form-control" />
                <span asp-validation-for="Book.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PageCount"></label>
                <input asp-for="Book.PageCount" class="form-control" />
                <span asp-validation-for="Book.PageCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Kategoriler</label>
                @foreach (var item in Model.Categories)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="SelectCategoryIds" value="@item.Value"
                               id="cat_@item.Value" />
                        <label class="form-check-label" for="cat_@item.Value">@item.Text</label>
                    </div>
                }
                <span asp-validation-for="SelectCategoryIds" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Ekle</button>
            <a asp-action="Index" class="btn btn-outline-primary">Listeye Dön</a>
        </form>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}
