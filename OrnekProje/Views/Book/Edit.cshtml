@model OrnekProje.Models.ViewModels.AddBookForm_VM

@{
    ViewData["Title"] = "Edit";
}

<h1>Güncelle</h1>

@* <h4>AddBook_VM</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.Book.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="Book.Id" class="control-label"></label>
                <input asp-for="Book.Id" class="form-control" />
                <span asp-validation-for="Book.Id" class="text-danger"></span>
            </div> *@
            <input type="hidden" asp-for="Book.Id" />

            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Price" class="control-label"></label>
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Summary" class="control-label"></label>
                <input asp-for="Book.Summary" class="form-control" />
                <span asp-validation-for="Book.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PageCount" class="control-label"></label>
                <input asp-for="Book.PageCount" class="form-control" />
                <span asp-validation-for="Book.PageCount" class="text-danger"></span>
            </div>

            @* Kategoriler *@
            <div class="form-group">
        <label>Kategoriler</label>
        @foreach (var item in Model.Categories)
        {
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       name="SelectCategoryIds"
                       value="@item.Value"
                       id="cat_@item.Value"
                       @(Model.SelectCategoryIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                <label class="form-check-label" for="cat_@item.Value">@item.Text</label>
            </div>
        }
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
